
    <div class="container">
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <img src="images/vegan-burger.jpg" width="150" height="100">
          <h3>EAT DA BURGER</h3>
        </div>
        <div class="col-md-4"></div>
      </div>
      <div class="row">
        <div class="col-md-1 border_right"></div>
        
        <div class="col-md-3 border_right white">
          <h3>Burgers</h3>

          <ol>
            {{#each burgers}}
              {{#unless this.devoured}}
                <li>{{this.burgers}}</li>
                <form action="/{{this.id}}" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">devour it!</button>
                  </form>
              {{/unless}}
            {{/each}}
          </ol>

        </div>
        {{!-- add burger here in this column --}}
        <div class="col-md-4 border_right">
          <h2>Add a Burger</h2>
          <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
              <label for="enterBurger">Entry:</label>
              <input type="text" name="newBurger">
            </div>

            <button id="addBurgerButton" type="submit">Add Burger</button>
          </form>
        </div>
        
        <div class="col-md-3 border_right">
          <h3>Devoured</h3>

          <ol>
          {{#each burgers}}
            {{#if this.devoured}}
                <li id="task-completed-text">{{this.burgers}}</li>
            {{/if}}
          {{/each}}
        </ol>


        </div>
        <div class="col-md-1"></div>
      </div>
    </div>

